  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/node": "^20.17.10",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "highlight.js": "^11.11.1",
    "react-hot-toast": "^2.4.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guipas/react-clipboard-button.git"
