{
  "name": "react-clipboard-button",
  "version": "2.0.0",
  "files": [
    "dist",
    "types"
  ],
  "type": "module",
  "main": "./dist/lib.umd.js",
  "module": "./dist/lib.es.js",
  "types": "./types/lib.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./types/lib.d.ts",
